{
  "$schema": "https://raw.githubusercontent.com/epdoc/tools/master/packages/launchgen/schemas/launch.schema.json",
  "launch": {
    "groups": [
      {
        "id": "test",
        "name": "Tests",
        "console": "internalConsole",
        "includes": [
          "**/*.test.ts"
        ],
        "runtimeArgs": [
          "test",
          "-A",
          "--inspect-brk"
        ]
      },
      {
        "id": ".",
        "name": "main",
        "console": "internalConsole",
        "program": "./main.ts",
        "runtimeArgs": [
          "run",
          "-A",
          "--inspect-brk"
        ],
        "scripts": [
          "",
          "--help",
          "athlete"
        ]
      }
    ]
  }
}