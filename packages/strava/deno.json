{
  "name": "@jpravetz/strava",
  "description": "A command line application to generate KML files suitable for import into Google Earth",
  "version": "2.0.0",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "exports": "./main.ts",
  "tasks": {
    "test": "deno test -A --unstable-kv",
    "lint": "deno lint",
    "check": "deno check src test/*.test.ts main.ts"
  },
  "tests": {
    "include": ["test/**/*.ts", "src/**/*.test.ts"]
  },
  "imports": {
    "@epdoc/cliapp": "jsr:@epdoc/cliapp@^1.0.0",
    "@epdoc/daterange": "jsr:@epdoc/daterange@^0.2.15",
    "@epdoc/datetime": "jsr:@epdoc/datetime@^2.0.1",
    "@epdoc/duration": "jsr:@epdoc/duration@^0.2.3",
    "@epdoc/fs": "jsr:@epdoc/fs@^1.0.2",
    "@epdoc/logger": "jsr:@epdoc/logger@^1003.0.0",
    "@epdoc/msgbuilder": "jsr:@epdoc/msgbuilder@^0.0.1",
    "@epdoc/type": "jsr:@epdoc/type@^1.1.18",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/http": "jsr:@std/http@^1.0.21",
    "@std/flags": "jsr:@std/flags@^1.0.8",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/expect": "jsr:@std/expect@^1.0.8",
    "@std/testing": "jsr:@std/testing@^1.0.8",
    "commander": "npm:commander@^14.0.2"
  },

  "fmt": {
    "singleQuote": true,
    "lineWidth": 110,
    "include": ["src", "test"],
    "exclude": ["test/readonly", "test/tmp"]
  },
  "lint": {
    "include": ["src", "test"],
    "exclude": ["test/tmp", "test/readonly"]
  }
}
