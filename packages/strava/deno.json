{
  "name": "@jpravetz/strava",
  "description": "A command line application to generate KML files suitable for import into Google Earth",
  "version": "2.0.0-alpha.10",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "exports": "./main.ts",
  "tasks": {
    "test": "deno test -A",
    "lint": "deno lint",
    "check": "deno check src test main.ts",
    "install": "deno cache --lock=deno.lock ./main.ts && deno install -f --global -A --config deno.json --name strava --lock=deno.lock ./main.ts"
  },
  "tests": {
    "include": [
      "test/**/*.ts",
      "src/**/*.test.ts"
    ]
  },
  "imports": {
    "@epdoc/cliapp": "jsr:@epdoc/cliapp@^1.0.3",
    "@epdoc/daterange": "jsr:@epdoc/daterange@^0.2.16",
    "@epdoc/datetime": "jsr:@epdoc/datetime@^2.0.3",
    "@epdoc/duration": "jsr:@epdoc/duration@^0.3.2",
    "@epdoc/fs": "jsr:@epdoc/fs@^1.1.3",
    "@epdoc/logger": "jsr:@epdoc/logger@^1003.0.3",
    "@epdoc/msgbuilder": "jsr:@epdoc/msgbuilder@^0.0.4",
    "@epdoc/type": "jsr:@epdoc/type@^1.1.19",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/http": "jsr:@std/http@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "commander": "npm:commander@^14.0.2",
    "xmlbuilder": "npm:xmlbuilder@^15.1.1",
    "@oak/oak": "jsr:@oak/oak@^17.1.6",
    "@opensrc/deno-open": "jsr:@opensrc/deno-open@^1.0.0",
    "@std/testing/bdd": "jsr:@std/testing@^1.0.16/bdd"
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 100,
    "include": [
      "src",
      "test",
      "main.ts",
      "*.json"
    ],
    "exclude": [
      "test/readonly",
      "test/tmp"
    ]
  },
  "lint": {
    "include": [
      "src",
      "test",
      "main.ts",
      "*.json"
    ],
    "exclude": [
      "test/tmp",
      "test/readonly"
    ]
  }
}